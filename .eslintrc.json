{
    "parser": "@typescript-eslint/parser",
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:prettier/recommended",
        "eslint:recommended",
        "prettier" 
    ],
    "overrides": [],
    "plugins": ["prettier"],
    "parserOptions": {
        "ecmaVersion": 2020,
        "sourceType": "module",
        "ecmaFeatures": {
            // Allows for the parsing of JSX
            "jsx": true
        }
    },
    "rules": {
        "prettier/prettier": "error"
      }
}